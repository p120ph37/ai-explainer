{
  "name": "frontier-ai-explainer",
  "version": "0.1.0",
  "description": "An interactive learning tool for understanding frontier AI technology",
  "module": "src/server.ts",
  "type": "module",
  "private": true,
  "scripts": {
    "dev": "bun --hot src/server.ts",
    "dev:editorial": "bun --hot src/editorial/server.ts",
    "dev:stop": "test -f .dev.pid && kill $(cat .dev.pid) 2>/dev/null; rm -f .dev.pid",
    "dev:restart": "bun run dev:stop; sleep 1; bun run dev",
    "build": "bun scripts/build.ts",
    "preview": "bun src/preview.ts",
    "test": "bun test",
    "test:watch": "bun test --watch",
    "test:e2e": "bunx playwright test",
    "test:e2e:ui": "bunx playwright test --ui",
    "test:e2e:update": "bunx playwright test --update-snapshots",
    "test:all": "bun test && playwright test",
    "validate": "bun scripts/validate-content.ts",
    "editorial:validate": "bun src/editorial/validate-anchors.ts"
  },
  "devDependencies": {
    "@babel/core": "^7.28.5",
    "@griffel/babel-preset": "^1.7.0",
    "@griffel/core": "^1.19.2",
    "@playwright/test": "^1.57.0",
    "@types/bun": "latest",
    "happy-dom": "^20.0.11"
  },
  "peerDependencies": {
    "typescript": "^5"
  },
  "dependencies": {
    "@griffel/react": "^1.5.32",
    "@mdx-js/esbuild": "^3.1.1",
    "@mdx-js/mdx": "^3.1.1",
    "@mdx-js/preact": "^3.1.1",
    "@preact/signals": "^2.5.1",
    "@visx/axis": "^3.12.0",
    "@visx/group": "^3.12.0",
    "@visx/hierarchy": "^3.12.0",
    "@visx/network": "^3.12.0",
    "@visx/responsive": "^3.12.0",
    "@visx/scale": "^3.12.0",
    "@visx/shape": "^3.12.0",
    "@visx/text": "^3.12.0",
    "@visx/tooltip": "^3.12.0",
    "gpt-tokenizer": "^3.4.0",
    "preact": "^10.28.0",
    "preact-render-to-string": "^6.6.3",
    "remark-frontmatter": "^5.0.0",
    "remark-mdx-frontmatter": "^5.2.0"
  }
}
